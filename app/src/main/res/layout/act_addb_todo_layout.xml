<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:id="@+id/activity_basexq_MyTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightvisiable="true"
        app:righttext="提交"
        app:titletext="重点督办" />
    <LinearLayout
        android:background="@color/color_blue_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:text="内容描述"
            android:textColor="@color/color_666666"
            android:textSize="30px" />
        <EditText
            android:padding="10dp"
            android:id="@+id/edit_des"
            android:background="@drawable/bg_grid2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:hint="请在这里输入描述信息(限300字)..."
            android:minHeight="160dp"
            android:maxLength="300"
            android:textColor="@color/monsoon"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/color_blue_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:text="上传图片"
            android:textColor="@color/color_666666"
            android:textSize="30px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="16dip"
        android:visibility="visible">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/zddb_todo_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>
