<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:paddingBottom="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/color_f7f7f7"
         />
<LinearLayout
    android:id="@+id/ll_jdname"
    android:layout_marginTop="@dimen/y28"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_below="@+id/ll_line"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_blue"
        android:layout_marginLeft="@dimen/x22"
        android:layout_width="@dimen/x8"
        android:layout_height="@dimen/y24"
        android:background="#0086D1"
        />
    <TextView
        android:layout_marginLeft="@dimen/x12"
        tools:text="当前进度名称"
        android:textColor="@color/color_333333"
        android:id="@+id/tv_jdname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_wcl"
        android:layout_marginTop="@dimen/y36"
        android:layout_below="@+id/ll_jdname"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginRight="@dimen/x100"
        android:layout_toLeftOf="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.a21zhewang.constructionapp.customview.TTFTextView
            android:id="@+id/tv_double"
            tools:text="100%"
            android:textColor="#0084CF"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="完成率"
            android:textSize="12sp"
            android:textColor="@color/color_727272"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_center"
        android:visibility="invisible"
        android:layout_width="1px"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/y36"
        android:layout_below="@+id/ll_jdname"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x100"
        android:layout_toRightOf="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.a21zhewang.constructionapp.customview.TTFTextView
            android:id="@+id/tv_day"
            tools:text="0"
            android:textColor="#0084CF"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="滞后天数"
            android:textSize="12sp"
            android:textColor="@color/color_727272"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:padding="@dimen/x10"
        android:background="@drawable/login_ed_shape"
        tools:text="这里是情况说明内容，这里是情况说明内容这里是情况说 明内容这里是情况说明内容。"
       android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginBottom="@dimen/x16"
        android:layout_below="@+id/ll_wcl"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:textColor="@color/color_333333"
        android:minHeight="@dimen/y80"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10sp"
            android:textColor="@color/color_727272"
            android:text="计划："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jh"
            android:textSize="11sp"
            android:textColor="@color/color_333333"
            tools:text="2018/03/19~2018/06/24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/x30"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10sp"
            android:textColor="@color/color_727272"
            android:text="实际："

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sj"
            android:textSize="11sp"
            android:textColor="@color/color_333333"
            tools:text="2018/03/19~2018/06/24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>