<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a21zhewang.constructionapp.ui.zxjc.AQXQActivity">
    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:id="@+id/activity_gtxtxq_MyTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titletext="专项检查详情 " />
    <TextView
        android:id="@+id/activity_basexq_tv_title"
        style="@style/text_30px_33"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#ffffff"
        android:gravity="center"
        android:text="安全描述及图片" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10px"
            android:text="内容描述"
            android:textColor="#333333"
            android:textSize="36px" />


    </LinearLayout>

    <TextView
        android:id="@+id/activity_basexq_tv_nrms"
        style="@style/text_30px_33"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/gtxt_jsll_item_shape"
        android:gravity="left|top"
        android:padding="3px" />

    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/activity_basexq_RecyclerView_imgs"
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:layout_marginTop="20px">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
