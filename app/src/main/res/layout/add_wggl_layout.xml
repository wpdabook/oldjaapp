<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_tzgg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="com.a21zhewang.constructionapp.ui.wggl.AddWgActivity">

    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:id="@+id/activity_add_tzgg_MyTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titletext=""
        ></com.a21zhewang.constructionapp.customview.MyTitleBar>
    <ScrollView
        style="@style/scrollstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:background="#f4f5f6"
                    android:gravity="center"
                    android:text="项目名称"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_add_tzgg_TextView_pjname"
                        android:padding="15px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15px"
                        android:background="@drawable/myspinner_shape"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:text="请选择项目"
                        android:textSize="30px" />

                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:background="#f4f5f6"
                    android:gravity="center"
                    android:text="问题类型"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <LinearLayout
                    android:id="@+id/lin_wg_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_add_tzgg_EditText_xxbt"
                        android:padding="15px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15px"
                        android:background="@drawable/gtxt_jsll_item_shape"
                        android:gravity="left|top"
                        android:textColor="#333333"
                        android:textSize="30px" />

                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:background="#f4f5f6"
                    android:gravity="center"
                    android:text="内容"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/activity_add_tzgg_EditText_nr"
                        android:padding="15px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15px"
                        android:background="@drawable/gtxt_jsll_item_shape"
                        android:gravity="left|top"
                        android:textColor="#333333"
                        android:textSize="30px" />

                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:background="#f4f5f6"
                    android:gravity="center"
                    android:text="上传图片"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="15px">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/activity_add_tzgg_RecyclerView_imgs"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                    </android.support.v7.widget.RecyclerView>

                    <ImageView
                        android:id="@+id/activity_add_tzgg_ImageView_addimgs"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/photo_ico" />


                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:background="#f4f5f6"
                    android:gravity="center"
                    android:text="接收单位"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="15px">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.a21zhewang.constructionapp.customview.MySpinner
                            android:id="@+id/activity_add_tzgg_MySpinner_dw"
                            android:layout_width="220px"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10px"
                            app:str="选择单位" />
                        <com.a21zhewang.constructionapp.customview.CanyurenView
                            android:id="@+id/activity_add_tzgg_MySpinner_jsr"
                            android:layout_width="220px"
                            android:layout_height="match_parent"
                            app:str="选择接收人" />
                        <LinearLayout
                            android:id="@+id/activity_add_tzgg_LinearLayout_adduser"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50px"
                                android:layout_height="50px"
                                android:src="@mipmap/addimg"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <com.a21zhewang.constructionapp.customview.MyListView
                        android:id="@+id/activity_add_tzgg_MyListView_dw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px"
                android:gravity="center">

                <TextView
                    android:id="@+id/activity_add_tzgg_TextView_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bluebtn_bg"
                    android:gravity="center"
                    android:text="提交"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/activity_add_tzgg_TextView_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bluebtn_bg"
                    android:gravity="center"
                    android:text="取消"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
