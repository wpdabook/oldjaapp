<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="20px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myspinner_shape">

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e6e6e6"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/sgrz_list_item_tv_fbdw"
                            android:padding="2px"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            style="@style/text_30px_33"
                            android:gravity="center_vertical|left"
                            android:text="分包单位:"
                            />
                        <TextView
                            android:id="@+id/sgrz_list_item_tv_time"
                            android:padding="2px"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="30px"
                            android:text="2017-04-21"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/sgrz_list_item_tv_ms"
                            android:padding="2px"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            style="@style/text_30px_66"
                            android:gravity="center_vertical|left"
                            android:text="申请单位"
                            />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                <ImageView
                    android:layout_marginRight="20px"
                    android:layout_width="30px"
                    android:layout_height="match_parent"
                    android:src="@mipmap/enterico"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="10px"
                        android:layout_marginLeft="20px"
                        android:id="@+id/sgrz_list_item_tv_isread"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:background="@drawable/sgtx_list_item_shape"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60px"
                android:background="#FfFfFf">
                <TextView
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:paddingLeft="2px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:gravity="center_vertical"
                    android:text="武汉第一建筑公司"/>
                <LinearLayout
                    android:layout_marginRight="20px"
                    android:orientation="horizontal"
                    android:layout_width="250px"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        style="@style/text_30px_66"
                        android:text="填写人："
                        />

                    <TextView
                        android:id="@+id/sgrz_list_item_tv_addman"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        style="@style/text_30px_66"
                        android:text="张三"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>