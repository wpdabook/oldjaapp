<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tzgg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="com.a21zhewang.constructionapp.ui.tzgg.TzggActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">
        <com.a21zhewang.constructionapp.customview.MyTitleBar
            android:id="@+id/activity_tzgg_MyTitleBar"
            android:layout_width="match_parent"
            android:layout_height="80px"
            ></com.a21zhewang.constructionapp.customview.MyTitleBar>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:clickable="true"
            android:paddingRight="20px"
            android:visibility="visible">
            <ImageView
                android:id="@+id/activity_tzgg_ImageView_addimg"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/addimgicowhite"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.a21zhewang.constructionapp.customview.SearchView
            android:visibility="gone"
            android:id="@+id/activity_tzgg_SearchView"
            android:layout_margin="10px"
            android:layout_width="match_parent"
            android:layout_height="88px"/>
        <com.angel.layout.SWPullRecyclerLayout
            android:id="@+id/activity_tzgg_SWPullRecyclerLayout"
            android:layout_margin="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.angel.layout.SWPullRecyclerLayout>
    </LinearLayout>

</LinearLayout>
