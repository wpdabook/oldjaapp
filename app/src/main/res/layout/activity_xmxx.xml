<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_xmxx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="com.a21zhewang.constructionapp.ui.xmxx.XmxxActivity">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/top_title_layout"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <com.a21zhewang.constructionapp.customview.MyTitleBar
            android:id="@+id/activity_baselistview_MyTitleBar"
            android:layout_width="match_parent"
            android:layout_height="80px"
            ></com.a21zhewang.constructionapp.customview.MyTitleBar>
        <RelativeLayout
            android:id="@+id/activity_baselistview_RelativeLayout"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:clickable="true"
            android:paddingRight="20px"
            android:visibility="visible">
            <TextView
                android:id="@+id/righttext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:textSize="26px"
                android:textColor="@color/white"
                android:visibility="gone"
                android:text="汉阳区"/>
            <ImageView
                android:visibility="visible"
                android:id="@+id/rightimg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:src="@drawable/ic_search_black_24dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:background="#ffffff"
            android:padding="5dp"
            >

            <com.a21zhewang.constructionapp.utils.RoundImageView
                android:layout_width="240px"
                android:layout_height="240px"
                android:id="@+id/activity_xmxx_ImageView_img"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:padding="10px">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.a21zhewang.constructionapp.customview.MySpinner
                        android:id="@+id/activity_xmxx_tv_xmmc"
                        android:layout_weight="1"
                        android:padding="2px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        style="@style/text_30px_33"
                        android:textSize="35px"
                        android:text=""/>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/activity_xmxx_tv_xmdz"
                        android:layout_weight="1"
                        android:padding="2px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="@color/color_666666"
                        android:text="项目地址:"/>
                    <TextView
                        android:padding="2px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/activity_xmxx_tv_fzr"
                        android:layout_weight="1"
                        android:padding="2px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="@color/color_666666"
                        android:text="负责人:"/>
                    <TextView
                        android:padding="2px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/activity_xmxx_tv_lxdh"
                        android:layout_weight="1"
                        android:padding="2px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="@color/color_666666"
                        android:text="联系电话:"/>
                    <TextView
                        android:padding="2px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#E1DFDA">
            <RadioGroup
                android:id="@+id/activity_xmxx_RadioGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkedButton="@+id/activity_xmxx_RadioButton1">
                <RadioButton
                    android:id="@+id/activity_xmxx_RadioButton1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    style="@style/RadioButton_style"

                    android:text="基本信息"/>
                <RadioButton
                    android:id="@+id/activity_xmxx_RadioButton2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    style="@style/RadioButton_style"
                    android:text="总包联系人"/>
                <RadioButton
                    android:id="@+id/activity_xmxx_RadioButton3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    style="@style/RadioButton_style"
                    android:text="分包联系人"/>

            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <com.a21zhewang.constructionapp.customview.NoScrollViewPager
                android:id="@+id/activity_xmxx_NoScrollViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
