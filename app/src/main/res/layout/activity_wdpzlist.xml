<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_zxjc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">
        <com.a21zhewang.constructionapp.customview.MyTitleBar
            android:id="@+id/activity_zxjc_MyTitleBar"
            android:layout_width="match_parent"
            android:layout_height="80px"
            app:titletext="危大动态上报"
            ></com.a21zhewang.constructionapp.customview.MyTitleBar>

        <RelativeLayout
            android:id="@+id/activity_zxjc_RelativeLayout"
            android:layout_alignParentRight="true"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:clickable="true"
            android:paddingRight="20px"
            android:visibility="visible">
            <ImageView
                android:id="@+id/activity_tzgg_ImageView_addimg"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/addimgicowhite"
                />

        </RelativeLayout>
    </RelativeLayout>
    <com.a21zhewang.constructionapp.customview.SearchView
        android:id="@+id/SearchView_top"
        android:layout_margin="10px"
        android:layout_width="match_parent"
        android:layout_height="88px"/>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.a21zhewang.constructionapp.customview.MySpinner
        android:layout_weight="1"
        android:id="@+id/MySpinner_xm"
        android:layout_marginLeft="20px"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x18"
        android:layout_width="0dp"
        android:layout_height="@dimen/x45"
        />
    <com.a21zhewang.constructionapp.customview.MySpinner
        android:layout_weight="1"
        android:id="@+id/MySpinner_type"
        android:layout_marginLeft="20px"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x18"
        android:layout_width="0dp"
        android:layout_height="@dimen/x45"
        />
</LinearLayout>






    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_zxjc_activity_zxjc_SWPullRecyclerLayout"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>

