<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sgrzlr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF8FF"
    android:orientation="vertical"
    tools:context="com.a21zhewang.constructionapp.ui.sgrz.SgrzlrActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.a21zhewang.constructionapp.customview.MyTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titletext="施工日志-录入" />

        <ScrollView
            style="@style/scrollstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <TextView
                            android:layout_width="140px"
                            android:layout_height="match_parent"
                            android:background="#F0F4F6"
                            android:gravity="center"
                            android:text="项目名称"
                            style="@style/text_30px_33"/>

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff">

                            <TextView
                                android:id="@+id/activity_sgrzlr_TextView"
                                android:gravity="center_vertical"
                                android:background="@drawable/myspinner_shape"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3px"
                                android:text="请选择项目名称"
                                >

                            </TextView>

                        </LinearLayout>

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <TextView
                            android:layout_width="140px"
                            android:layout_height="match_parent"
                            android:background="#F0F4F6"
                            android:gravity="center"
                            android:text="时间"
                            style="@style/text_30px_33" />

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff">

                            <com.a21zhewang.constructionapp.customview.MyTimeSpinner
                                android:id="@+id/activity_sgrzlr_MyTimeSpinner"
                                android:layout_width="348px"
                                android:layout_height="match_parent"
                                android:layout_margin="3px"></com.a21zhewang.constructionapp.customview.MyTimeSpinner>

                        </LinearLayout>

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <TextView
                            android:layout_width="140px"
                            android:layout_height="match_parent"
                            android:background="#F0F4F6"
                            android:gravity="center"
                            android:text="施工单位"
                            style="@style/text_30px_33" />

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff">

                            <TextView
                                android:id="@+id/activity_sgrzlr_TextView_sgdw"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3px"
                             android:gravity="center_vertical"
                                style="@style/text_30px_33"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <TextView
                            android:layout_width="140px"
                            android:layout_height="match_parent"
                            android:background="#F0F4F6"
                            android:gravity="center"
                            android:text="天气"
                            style="@style/text_30px_33"/>

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/activity_sgrzlr_EditText_tq"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3px"
                                android:gravity="center_vertical"
                                android:text="天气  气温  风速"
                                style="@style/text_30px_33"
                                android:background="@null"/>


                        </LinearLayout>

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">


                        <TextView
                            android:paddingLeft="5px"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="生产情况记录"
                            android:textColor="#333333"
                            android:textSize="36px" />

                        <ImageView
                            android:id="@+id/activity_sgrzlr_img_add"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:src="@mipmap/addimgico" />


                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#E6EBEF"
                    android:layout_height="1px" />
                <com.a21zhewang.constructionapp.customview.MyListView
                    android:id="@+id/activity_sgrzlr_MyListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.a21zhewang.constructionapp.customview.MyListView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:paddingLeft="5px"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:gravity="center_vertical"
                        android:text="质量技术安全工作记录"
                        android:textColor="#333333"
                        android:textSize="36px" />
                    <EditText
                        android:id="@+id/activity_sgrzlr_EditText_gzjl"
                        android:layout_width="match_parent"
                        android:layout_height="200px"
                        android:background="@drawable/login_ed_shape"
                        android:textSize="30px"
                        android:padding="5px"
                        android:gravity="left|top"
                        android:textColor="#333333"/>
                    <TextView
                        android:paddingLeft="5px"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:gravity="center_vertical"
                        android:text="备注"
                        android:textColor="#333333"
                        android:textSize="30px" />
                    <EditText
                        android:id="@+id/activity_sgrzlr_EditText_bz"

                        android:layout_width="match_parent"
                        android:layout_height="200px"
                        android:background="@drawable/login_ed_shape"
                        android:padding="5px"
                        android:gravity="left|top"
                        android:textSize="30px"
                        android:textColor="#333333"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_sgrzlr_TextView_tj"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提交"
                        android:textSize="30px"
                        android:textColor="#ffffff"
                        android:background="@mipmap/bluebtn_bg"/>
                    <TextView
                        android:id="@+id/activity_sgrzlr_TextView_back"

                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返回"
                        android:textSize="30px"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="30px"
                        android:background="@mipmap/bluebtn_bg"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</LinearLayout>
