<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:id="@+id/popup_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_lin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/popup_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                />
            <com.fenjuly.library.ArrowDownloadButton
                android:id="@+id/popup_ProgressBar"
                android:visibility="gone"
                android:layout_width="180dp"
                android:layout_height="180dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="100"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popup_lin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center">
            <Button
                android:id="@+id/popup_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忽略此版本"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/buttonshape"
                android:textColor="#1B9AF2"/>
            <Button
                android:id="@+id/popup_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/buttonshape"
                android:textColor="#1B9AF2"
                android:text="下次提醒"/>
            <Button
                android:id="@+id/popup_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:textColor="#1B9AF2"
                android:text="立即更新"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>