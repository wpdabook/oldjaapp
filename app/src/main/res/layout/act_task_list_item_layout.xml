<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="20px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/gtxt_list_item_LinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gtxt_list_item_img_msgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuan"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/li_type"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:textSize="15sp"
                            android:id="@+id/tv_title"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:text=""
                            android:textColor="@color/color_666666"
                            tools:text="" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/li_sea"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tv_receiver_project"
                            android:textColor="@color/color_666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="300px"
                            android:textSize="15sp"
                            tools:text=""/>
                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:visibility="gone"
                        android:layout_marginRight="20px"
                        android:layout_width="30px"
                        android:layout_height="match_parent"
                        android:src="@mipmap/enterico"/>
                    <ImageView
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:id="@+id/gtxt_list_item_tv_isread"
                        android:layout_width="16px"
                        android:layout_height="14px"
                        android:background="@drawable/ic_circle_red_24dp"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    tools:text=""/>
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">


                    <TextView
                        android:textColor="@color/color_666666"
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        tools:text=""
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_people"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    tools:text=""/>
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">


                    <TextView
                        android:textColor="@color/color_666666"
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        tools:text=""
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</LinearLayout>