<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/scrollstyle"
    >

    <LinearLayout
    android:orientation="vertical"
    android:background="@color/table_line"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--累计风险统计-->
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_marginBottom="2dp"
        android:layout_height="0dp">
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="风险检查情况"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <TextView
                android:text="历史数据"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="center|right"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_arrow"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:background="@color/table_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <!--风险分布占比-->
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="0dp">

            <include
                android:id="@+id/foot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                layout="@layout/act_inspection_chatline" />

        </LinearLayout>
    </LinearLayout>
    <!--安全风险-->
    <LinearLayout
        android:background="@color/white"
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <include
            android:id="@+id/foot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/act_inspection_z" />
     </LinearLayout>
     <!--质量隐患-->
     <LinearLayout
            android:background="@color/white"
            android:layout_weight="3.5"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include
                android:id="@+id/foot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                layout="@layout/act_inspection_a" />
     </LinearLayout>
        <!--文明施工-->
        <LinearLayout
            android:background="@color/white"
            android:layout_weight="3.5"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include
                android:id="@+id/foot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                layout="@layout/act_inspection_b" />
        </LinearLayout>
        <!--人员情况-->
        <LinearLayout
            android:background="@color/white"
            android:layout_weight="3.5"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <include
                android:id="@+id/foot"
                layout="@layout/act_inspection_c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />
        </LinearLayout>
        <!--重点检查完成率-->
        <LinearLayout
            android:background="@color/white"
            android:layout_weight="3.5"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include
                android:id="@+id/foot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                layout="@layout/act_inspection_d" />
        </LinearLayout>
   </LinearLayout>
</ScrollView>
