<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_zf2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a21zhewang.constructionapp.ui.gtxtiu.ZF2Activity">
    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:id="@+id/activity_zf2_MyTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titletext="转发"></com.a21zhewang.constructionapp.customview.MyTitleBar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:padding="20px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="发送"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10px">
                <com.a21zhewang.constructionapp.customview.LinkageSpinner
                    android:id="@+id/activity_zf2_LinkageSpinner"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="转发描述"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="3px">
                <EditText
                    android:id="@+id/activity_zf2_EditText_clyj"
                    android:gravity="left|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10px"
                    android:background="@drawable/gtxt_jsll_item_shape"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color"/>
        <LinearLayout
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/activity_zf2_tv_tj"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/bluebtn_bg"
                android:text="提交"
                android:textSize="30px"
                android:textColor="#fff"
                android:layout_marginRight="30px"/>
            <TextView
                android:id="@+id/activity_zf2_tv_back"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/bluebtn_bg"
                android:text="返回"
                android:textSize="30px"
                android:textColor="#fff"
                android:layout_marginLeft="30px"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
