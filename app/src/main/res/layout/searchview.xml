<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/searchview_top_lintop"
            android:visibility="visible"
            android:gravity="center"
            android:clickable="true"
            android:padding="10px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searchview_shape"
            >
            <LinearLayout
                android:id="@+id/searchview_top_lintop_childview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="18sp"
            />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/searchview_top_lin_edittext"
            android:padding="10px"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searchview_shape">
            <ImageView
                android:id="@+id/searchview_top_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_search"/>
<EditText
    android:id="@+id/searchview_top_edittext"
    android:textSize="18sp"
    android:hint="搜索"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:imeOptions="actionSearch"
    android:singleLine="true"
    android:background="@null"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>