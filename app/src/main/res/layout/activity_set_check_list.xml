<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_set_check_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f7f7f7"
    tools:context="com.a21zhewang.constructionapp.ui.zxjc.SetCheckListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">
        <com.a21zhewang.constructionapp.customview.MyTitleBar
            android:id="@+id/activity_set_check_list_MyTitleBar"
            android:layout_width="match_parent"
            android:layout_height="80px"
            app:titletext="配置检查表"
            ></com.a21zhewang.constructionapp.customview.MyTitleBar>

        <RelativeLayout
            android:id="@+id/activity_set_check_list_RelativeLayout"
            android:layout_alignParentRight="true"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:clickable="true"
            android:paddingRight="20px"
            android:visibility="visible">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@mipmap/fqbtn"
                />
            <TextView
                android:clickable="true"
                android:id="@+id/activity_set_check_list_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/text_30px_33"
                android:text="保存"/>

        </RelativeLayout>


    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_margin="8dp"
        android:id="@+id/activity_set_check_list_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
