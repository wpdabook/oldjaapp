<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_table_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a21zhewang.constructionapp.ui.zxjc.TableListActivity">

    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titletext="配置检查表" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/activity_table_list_checktime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/color_9e9e9e"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_table_list_checktypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/checklist_level0_shape"
            android:clickable="true"
            android:drawableLeft="@mipmap/backupico"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/color_272727"
            android:textSize="18sp"

            android:elevation="1dp"/>

        <android.support.v7.widget.RecyclerView
            android:background="@color/color_F0F4F6"
            android:id="@+id/activity_table_list_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
