<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/gtxt_list_item_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50px"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/gtxt_list_item_img_msgStatus"
                android:layout_width="16px"
                android:layout_height="16px"
                android:background="@drawable/yuan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gtxt_list_item_tv_etpShortName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical|left"
                            android:textColor="#666666"
                            android:textSize="15sp"
                            tools:text="建管" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gtxt_list_item_tv_msgTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical|left"
                            android:maxLength="17"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="15sp"
                            tools:text="标题" />

                    </LinearLayout>


                </LinearLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20px"
                        android:src="@mipmap/enterico" />

                    <TextView
                        android:id="@+id/gtxt_list_item_tv_isread"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="10px"
                        android:background="@drawable/sgtx_list_item_shape"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/gtxt_list_item_tv_createTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    tools:text="时间" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/gtxt_list_item_tv_msgStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/color_666666"
                        android:textSize="15sp"
                        tools:text="状态" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</LinearLayout>