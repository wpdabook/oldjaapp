<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_up_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="com.a21zhewang.constructionapp.ui.usercenter.UpPasswordActivity">
    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titletext="修改密码"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:background="#fff"
            android:layout_below="@+id/uppass_top_bar"
            android:id="@+id/lin_uppassword"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView

                    android:id="@+id/text1"
                    android:layout_marginRight="10dp"
                    android:text="        旧密码"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/activity_up_password_EditText_old"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/text1"
                    android:background="@drawable/myspinner_shape"
                    android:hint="输入当前密码"
                    android:textSize="14sp"
                    android:maxLength="20"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text2"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"

                    android:text="        新密码"
                    android:layout_alignRight="@+id/text1"
                    android:layout_below="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/activity_up_password_EditText_new1"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/text1"
                    android:hint="输入新密码"
                    android:background="@drawable/myspinner_shape"
                    android:maxLength="20"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/text3"
                    android:text="        新密码"
                    android:textSize="18sp"

                    android:layout_alignRight="@+id/text1"
                    android:layout_below="@+id/text2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/activity_up_password_EditText_new2"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/text1"
                    android:hint="输入新密码"
                    android:maxLength="20"
                    android:textSize="14sp"

                    android:background="@drawable/myspinner_shape"
                    />
            </LinearLayout>



        </LinearLayout>
        </LinearLayout>
        <TextView

            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6-20位,建议数字,字母,符号组合"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/activity_up_password_Button_yes"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="确定"
                android:textSize="18sp"
                android:background="#0084cf"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
