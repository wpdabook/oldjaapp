<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/zxjc_list_item_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/color_F0F4F6"
        android:elevation="1dp"
        android:orientation="vertical"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/checklist_level0_shape"
                android:minHeight="35dp">

                <TextView
                    android:id="@+id/zxjc_list_item_tv_createTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="7dp"
                    android:paddingLeft="20px"
                    android:textColor="@color/color_272727"
                    android:textSize="18sp"
                    tools:text="时间" />

                <TextView
                    android:id="@+id/zxjc_list_item_tv_zgl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20px"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="整改率"
                    android:textColor="@color/color_035e91"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/color_F0F4F6"
                        android:gravity="center_vertical"
                        android:padding="5px"
                        android:text="检查项目"
                        android:textColor="@color/color_035e91"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/zxjc_list_item_tv_pjname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:minHeight="30dp"
                        android:padding="5px"
                        android:textColor="@color/color_272727"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/color_F0F4F6"
                        android:gravity="center_vertical"
                        android:minHeight="30dp"
                        android:padding="5px"
                        android:text="检查时间"
                        android:textColor="@color/color_035e91"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/zxjc_list_item_tv_checktime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:minHeight="30dp"
                        android:padding="5px"

                        android:textColor="@color/color_272727"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_ededed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/color_F0F4F6"
                        android:gravity="center_vertical"
                        android:padding="5px"
                        android:text="检查人    "
                        android:textColor="@color/color_035e91"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/zxjc_list_item_tv_checkname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:padding="5px"

                        android:textColor="@color/color_272727"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/color_F0F4F6"
                        android:gravity="center_vertical"
                        android:padding="5px"
                        android:text="所在部门"
                        android:textColor="@color/color_035e91"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/zxjc_list_item_tv_checkdept"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:minHeight="30dp"
                        android:padding="5px"
                        android:textColor="@color/color_272727"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</LinearLayout>
