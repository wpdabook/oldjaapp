<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_yzg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="com.a21zhewang.constructionapp.base.YzgActivity">
<com.a21zhewang.constructionapp.customview.MyTitleBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:titletext="已整改"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="内容描述"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_yzg_EditText_nrms"
                    android:padding="5px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5px"
                    android:background="@drawable/gtxt_jsll_item_shape"
                    android:gravity="left|top"
                    android:textColor="#aaaaaa"
                    android:textSize="30px" />

            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="上传图片"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="5px">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_yzg_RecyclerView_imglist"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </android.support.v7.widget.RecyclerView>

                <ImageView
                    android:id="@+id/activity_yzg_img_addimg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/photo_ico" />


            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_yzg_tv_tj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bluebtn_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
