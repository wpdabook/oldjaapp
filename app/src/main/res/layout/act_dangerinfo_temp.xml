<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_check_qestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.a21zhewang.constructionapp.ui.zxjc.NewCheckQuestionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">
        <com.a21zhewang.constructionapp.customview.MyTitleBar
            android:id="@+id/MyTitleBar"
            android:layout_width="match_parent"
            android:layout_height="80px"
            app:titletext="新增检查问题"
            ></com.a21zhewang.constructionapp.customview.MyTitleBar>

        <RelativeLayout
            android:id="@+id/activity_new_check_qestion_sava"
            android:layout_alignParentRight="true"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:clickable="true"
            android:paddingRight="20px"
            android:visibility="visible">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@mipmap/fqbtn"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#0084cf"
                android:textSize="30px"
                android:textColor="#ffffff"
                android:text="保存"/>
        </RelativeLayout>
    </RelativeLayout>
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator4"
        android:layout_width="match_parent"
        android:background="#FFF7F7F7"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal" />

    <com.a21zhewang.constructionapp.customview.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
