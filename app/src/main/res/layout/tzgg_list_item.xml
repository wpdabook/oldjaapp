<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:padding="10px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">
        <ImageView
            android:layout_margin="15px"
            android:layout_width="85px"
            android:layout_height="85px"
            android:src="@mipmap/laba"/>
        <LinearLayout
            android:layout_margin="10px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tzgg_list_item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50px"
                style="@style/text_30px_33"
                tools:text="sdsadasda"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:ellipsize="end"

                />
                <TextView
                    android:visibility="invisible"
                    android:layout_gravity="right"
                    android:layout_marginTop="10px"
                    android:layout_marginLeft="20px"
                    android:id="@+id/tzgg_list_item_tv_isread"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:background="@drawable/sgtx_list_item_shape"/>
            </FrameLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tzgg_list_item_tv_from"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="来自:"
                    android:minHeight="50px"/>
                <TextView
                    android:id="@+id/tzgg_list_item_tv_time"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2017-2-16"
                    />

            </LinearLayout>
        </LinearLayout>
        
        
    </com.zhy.autolayout.AutoLinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/tab_color"/>
</LinearLayout>