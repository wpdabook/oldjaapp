<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="2dp">


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:background="@color/color_chat_blue">

        <ImageView
            android:id="@+id/iv_healthexamination_item_bg"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/editBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible" />

        <com.a21zhewang.constructionapp.customview.CircleImageView
            android:id="@+id/rel_item_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:scaleType="fitXY"
             />

        <TextView
            android:id="@+id/rel_item_name_nouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_item_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="姓名"
            android:textColor="@color/white"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_name_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_item_image">

            <TextView
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="13dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@color/white" />

            <TextView
                android:id="@+id/rel_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/line"
                android:gravity="center"
                android:text="男"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_name"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line"
                android:gravity="center"
                android:text="张三"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/rl_name_age"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8:10"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>