<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/body"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="86px">

        <com.a21zhewang.constructionapp.customview.MyTitleBar
            android:id="@+id/activity_risk_index_MyTitleBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backlin="true"
            app:righttext="保存"
            app:titletext="风险类型上报" />

    </FrameLayout>
    <ScrollView
        style="@style/scrollstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/li_select_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/em_btn_bottom_selector"
                android:padding="16dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_call"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/notice_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:hint="请选择通知对象"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/iconto"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="10dp"
                android:background="@color/homeline" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/homeline" />
            <LinearLayout
                android:id="@+id/li_select_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/em_btn_bottom_selector"
                android:orientation="horizontal"
                android:padding="16dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_update_app"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_risk_project"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:hint="选择项目"
                    android:paddingLeft="5dip"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/iconto"
                    android:visibility="visible" />
            </LinearLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/homeline" />
            <LinearLayout
                android:id="@+id/li_select_project_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/em_btn_bottom_selector"
                android:orientation="horizontal"
                android:padding="16dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_update_app"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_risk_project_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:hint="施工区域"
                    android:paddingLeft="5dip"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/iconto"
                    android:visibility="visible" />
            </LinearLayout>
            <View
                android:id="@+id/view6"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/homeline" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/li_select_subdivision_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/em_btn_bottom_selector"
                android:orientation="horizontal"
                android:padding="16dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_update_app"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_subdivision_project"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:hint="细分工程"
                    android:paddingLeft="5dip"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/iconto"
                    android:visibility="visible" />
            </LinearLayout>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/homeline" />
            <LinearLayout
                android:id="@+id/li_select_project_stage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/em_btn_bottom_selector"
                android:orientation="horizontal"
                android:padding="16dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_update_app"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_risk_project_stage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:hint="施工阶段"
                    android:paddingLeft="5dip"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/iconto"
                    android:visibility="visible" />
            </LinearLayout>
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/homeline" />
            <LinearLayout
                android:id="@+id/li_select_project_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/em_btn_bottom_selector"
                android:orientation="horizontal"
                android:padding="16dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_update_app"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_risk_project_categories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:hint="风险类别"
                    android:paddingLeft="5dip"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/iconto"
                    android:visibility="visible" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/homeline" />
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/li_select_total_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:background="@drawable/em_btn_bottom_selector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="16dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_update_app"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_general_floor"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="总楼层"
                    android:focusable="false"
                    android:paddingLeft="5dip"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/et_total_floor"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="点击选择总楼层"
                    android:textColor="#606060"
                    android:textColorHint="#C0C0C0"
                    android:textSize="15sp" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="层"
                    android:focusable="false"
                    android:paddingLeft="5dip"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/iconto"
                    android:visibility="visible" />
            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dip"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_marginRight="16dp"-->
            <!--android:background="@color/homeline" />-->

            <!--<LinearLayout-->
            <!--android:padding="16dp"-->
            <!--android:focusable="true"-->
            <!--android:focusableInTouchMode="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
            <!--<EditText-->
            <!--android:textSize="15sp"-->
            <!--android:textColor="@color/color_666666"-->
            <!--android:id="@+id/edit_general_floor"-->
            <!--android:minHeight="40dp"-->
            <!--android:hint="请输入总楼层"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

            <!--</LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/homeline" />
            <LinearLayout
                android:id="@+id/lin_edit_now_floor"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:textSize="15sp"
                    android:textColor="@color/color_666666"
                    android:id="@+id/edit_now_general_floor"
                    android:minHeight="40dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="请输入当前施工楼层"
                    android:inputType="numberSigned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/homeline" />

            <LinearLayout
                android:id="@+id/exit_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/em_btn_bottom_selector"
                android:padding="10dip"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_safe_exit" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="5dip"
                    android:text="安全退出"
                    android:textColor="@color/color_666666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/iconto" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/homeline"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/homeline"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
