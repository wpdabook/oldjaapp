<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="20px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/gtxt_list_item_LinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myspinner_shape">

        <LinearLayout
            android:layout_width="50px"
            android:gravity="center"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/gtxt_list_item_tv_msgTypeID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxHeight="100dp"
            android:gravity="center"
            android:text=""
            android:textSize="28px"
            android:textColor="#666666"
            tools:text="不可抗力"
            android:maxEms="1" />
        </LinearLayout>
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e6e6e6"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/gtxt_list_item_tv_etpShortName"
                            android:padding="2px"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="30px"
                            android:textColor="#666666"
                            android:gravity="center_vertical|left"
                            tools:text="整改单位"

                            />
                        <TextView
                            android:id="@+id/gtxt_list_item_tv_createUserName"
                            android:padding="2px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="300px"
                            android:textSize="30px"
                            tools:text="整改区域"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/gtxt_list_item_tv_msgTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:padding="2px"
                            android:text=""
                            tools:text="申请单位" />

                    </LinearLayout>

                </LinearLayout>


<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

                <ImageView
                    android:layout_marginRight="20px"
                    android:layout_width="30px"
                    android:layout_height="match_parent"
                    android:src="@mipmap/enterico"/>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="10px"
        android:layout_marginLeft="20px"
        android:id="@+id/gtxt_list_item_tv_isread"
        android:layout_width="20px"
        android:layout_height="20px"
        android:background="@drawable/sgtx_list_item_shape"/>
</FrameLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0">
                <TextView
                    android:padding="5dp"
                    android:id="@+id/gtxt_list_item_tv_createTime"
                    android:layout_weight="1"
                    android:paddingLeft="20px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#666666"
                    android:textSize="30px"
                    android:gravity="center_vertical"
                    tools:text="时间"/>
                <LinearLayout
                    android:layout_marginRight="20px"
                    android:orientation="horizontal"
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/gtxt_list_item_img_msgStatus"
                        android:layout_width="35px"
                        android:layout_height="35px"
                        android:background="@drawable/yuan"
                       />

                    <TextView
                        android:id="@+id/gtxt_list_item_tv_msgStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="30px"
                        tools:text="状态"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</LinearLayout>