<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_gtxt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.a21zhewang.constructionapp.ui.gtxtiu.AddGtxtActivity">

    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titletext="发起生产协调"></com.a21zhewang.constructionapp.customview.MyTitleBar>
<ScrollView
    style="@style/scrollstyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="项目名称"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/activity_add_gtxt_TextView_pjname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5px"
                    android:gravity="center_vertical"
                    android:background="@drawable/myspinner_shape"
                    android:minHeight="80px"
                    android:text="请选择项目"/>
            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="施工部位"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:padding="5px"
                    android:id="@+id/activity_add_gtxt_TextView_sgqy"
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:layout_margin="5px"
                    android:gravity="center_vertical"
                   android:text="@string/sgqy_str"/>
                <FrameLayout
                    android:layout_width="280px"
                    android:layout_height="match_parent"
                    android:layout_margin="5px">
                    <EditText
                        android:id="@+id/activity_add_gtxt_EditText_scgx"
                        android:background="@drawable/myspinner_shape"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:maxLength="20"
                        android:gravity="center"
                        android:hint="施工部位"/>

                <com.a21zhewang.constructionapp.customview.MySpinner

                    android:id="@+id/activity_add_gtxt_MySpinner_scgx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:text="施工部位" />
                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="楼层"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout

                android:id="@+id/lin_lc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal">

                <EditText
                    android:gravity="center"
                    android:id="@+id/activity_add_gtxt_EditText_lc"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5px"
                    android:layout_marginBottom="5px"
                    android:layout_marginTop="5px"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:background="@drawable/myspinner_shape" />

                <com.a21zhewang.constructionapp.customview.MySpinner
                    android:id="@+id/activity_add_gtxt_MySpinner_lc"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5px"
                    android:layout_marginTop="5px"
                    android:layout_marginRight="5px"
                    app:text="F" />
                <EditText
                    android:id="@+id/activity_add_gtxt_EditText_bg"
                    android:padding="5px"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_margin="5px"
                    android:textSize="14sp"
                    android:background="@drawable/myspinner_shape"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="numberSigned|numberDecimal"/>
                <com.a21zhewang.constructionapp.customview.MySpinner
                    android:id="@+id/activity_add_gtxt_MySpinner_bg"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5px"
                    android:layout_marginTop="5px"
                    android:layout_marginRight="5px"
                    app:text="F" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal">
                <com.a21zhewang.constructionapp.customview.MySpinner
                    android:id="@+id/spinner_lc"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="15px"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/ed_lc1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="15px"
                    android:background="@drawable/myspinner_shape"
                    android:gravity="center"
                    android:hint="里程"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:maxLines="1" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"/>
                <EditText
                    android:id="@+id/ed_lc2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="15px"
                    android:background="@drawable/myspinner_shape"
                    android:gravity="center"
                    android:hint="里程"
                    android:inputType="numberSigned|numberDecimal"
                    android:padding="5px"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/ed_wz"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15px"
                    android:layout_marginBottom="15px"
                    android:background="@drawable/myspinner_shape"
                    android:gravity="center"
                    android:hint="位置"
                    android:inputType="numberSigned|numberDecimal"
                    android:padding="5px"
                    android:textSize="14sp" />

                <com.a21zhewang.constructionapp.customview.MySpinner
                    android:id="@+id/spinner_wz"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15px"
                    android:layout_marginTop="15px"
                    android:layout_marginRight="15px"
                    android:textSize="14sp"
                    app:text="号" />
            </LinearLayout>
            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="协调类别"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_add_gtxt_TextView_xtlb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5px"
                    android:gravity="center_vertical"
                    android:background="@drawable/myspinner_shape"
                    android:minHeight="150px"
                    android:text="请选择协调类别"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="内容描述"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_add_gtxt_EditText_nrms"
                    android:padding="5px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5px"
                    android:background="@drawable/gtxt_jsll_item_shape"
                    android:gravity="left|top"
                    android:textColor="#aaaaaa"
                    android:textSize="30px" />

            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="上传图片"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="5px">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_add_gtxt_RecyclerView_imglist"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </android.support.v7.widget.RecyclerView>

                <ImageView
                    android:id="@+id/activity_add_gtxt_img_addimg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/photo_ico" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/activity_add_gtxt_img_getphoto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:src="@mipmap/photo_ico" />
            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125px"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="发送"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="5px"
                android:paddingTop="5px">

                <com.a21zhewang.constructionapp.customview.CanyurenView
                    android:id="@+id/activity_add_gtxt_CanyurenView_cyr"
                    android:layout_width="348px"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:str="选择接收人" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5px"
                    android:layout_marginTop="5px"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/activity_add_gtxt_CheckBox_zjjsr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20px"
                        android:layout_marginTop="5px"
                        android:background="@drawable/checkbox_selector"
                        android:button="@null" />

                    <TextView
                        android:id="@+id/activity_add_gtxt_tv_zjjsr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="最近接收人：张三，李四，王麻子" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100px"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="接收单位"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="5px"
                android:paddingTop="5px">
                <com.a21zhewang.constructionapp.customview.LinkageSpinner
                    android:id="@+id/activity_add_gtxt_img_LinkageSpinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100px"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <TextView
                android:layout_width="140px"
                android:layout_height="match_parent"
                android:background="#f4f5f6"
                android:gravity="center"
                android:text="抄送单位"
                android:textSize="24px" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="5px"
                android:paddingTop="5px">
                <com.a21zhewang.constructionapp.customview.LinkageSpinner
                    android:id="@+id/activity_add_gtxt_img_LinkageSpinner2"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/tab_color" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_add_gtxt_tv_tj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bluebtn_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>
