<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">
        <com.a21zhewang.constructionapp.customview.MyTitleBar
            android:id="@+id/activity_zxjc_MyTitleBar"
            android:layout_width="match_parent"
            android:layout_height="80px"
            app:titletext="施工信息"
            ></com.a21zhewang.constructionapp.customview.MyTitleBar>

        <RelativeLayout
            android:id="@+id/activity_wdjc_commit"
            android:layout_alignParentRight="true"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:clickable="true"
            android:paddingRight="20px"
            android:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30px"
                android:textColor="@color/white"
                android:text="保存"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_666666"
                android:text="请勾选施工状态："
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:background="@color/tab_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/wdjc_project_ck1"
                android:textSize="16sp"
                android:textColor="@color/color_666666"
                android:text="正常施工"
                android:checked="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <CheckBox
                android:id="@+id/wdjc_project_ck2"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_666666"
                android:text="未施工"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/no_work_lin"
            android:padding="10dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_666666"
                android:text="请选择未施工原因"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/prospinner"
                android:layout_width="wrap_content"
                android:layout_height="60dp">
            </Spinner>
            <EditText
                android:background="@null"
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:hint="请输入未施工原因(仅限300字以内)"
                android:minHeight="160dp"
                android:textColor="#AEAEAE"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="13.5sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_666666"
                android:text="请拍摄您准备检查的施工区域或场所"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:background="@color/tab_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="12dip">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/wd_pic_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
