<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_basexq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:descendantFocusability= "blocksDescendants"
    tools:context="com.a21zhewang.constructionapp.ui.jygz.Act_JygzDetail">
    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:id="@+id/activity_basexq_MyTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightvisiable="true"
        app:righttext=""
        app:titletext="" />



    <ScrollView
        style="@style/scrollstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16px">

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/activity_basexq_headerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                style="@style/text_30px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"

                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="项目名称" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:id="@+id/project_name"
                                style="@style/text_30px_33"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:maxLength="58"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:text="" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>



                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                style="@style/text_30px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="所属区域"/>

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:id="@+id/text_area"
                                style="@style/text_30px_33"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />
                    <!--楼层-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />


                            <TextView
                                android:id="@+id/activity_basexq_tv_lctv"
                                style="@style/text_30px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="截止时间" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:id="@+id/cc_time"
                                style="@style/text_30px_33"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                style="@style/text_30px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="整改单位" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:paddingTop="5px"
                                android:paddingBottom="5px"
                                android:id="@+id/unit"
                                style="@style/text_30px_33"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:minHeight="100px"
                                android:text="" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:id="@+id/rect_people"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                style="@style/text_30px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="整改人员" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:paddingTop="5px"
                                android:paddingBottom="5px"
                                android:id="@+id/tv_people"
                                style="@style/text_30px_33"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:minHeight="100px"
                                android:text="" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#E6EBEF" />
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF"/>

                        <TextView
                            style="@style/text_30px_33"
                            android:layout_width="150px"
                            android:layout_height="match_parent"
                            android:background="#F0F4F6"
                            android:gravity="center"

                            android:text="整改单位" />

                        <TextView
                            android:id="@+id/activity_basexq_tv_zgdw"
                            style="@style/text_30px_33"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:minHeight="100px"
                            android:text="" />

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E6EBEF" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#E6EBEF" />

            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/lin_nopass_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@color/color_blue_1"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="审核不通过"
                        android:textColor="@color/color_666666"
                        android:textSize="30px" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nopass_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_666666"
                        android:textSize="30px" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/color_blue_1"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="问题清单"
                    android:textColor="@color/color_666666"
                    android:textSize="30px" />
                <ImageView
                    android:padding="8dp"
                    android:gravity="center|right"
                    android:id="@+id/qr_image"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/jy_share"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">
                <com.a21zhewang.constructionapp.customview.MyScrollListView
                    android:id="@+id/scroll_list"
                    android:layout_width="match_parent"
                    android:layout_height="800dp"
                    android:divider="@null"
                    android:focusable="false"
                    android:cacheColorHint="#ffffff"
                    android:scrollbars="none" />
            </LinearLayout>
            <FrameLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <Button
                    android:gravity="center"
                    android:id="@+id/btn_all_submit"
                    android:background="@drawable/custom_btn_blue_back"
                    android:layout_alignParentBottom="true"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
