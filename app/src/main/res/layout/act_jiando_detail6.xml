<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_basexq"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a21zhewang.constructionapp.ui.jdzf.Act_JdzfDetail">
    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:id="@+id/activity_index_titlebar_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titletext="" />

    <ScrollView
        style="@style/scrollstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_black">
            <TextView
                android:id="@+id/jdzf_title"
                android:textColor="#333333"
                android:textSize="33px"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:background="@color/color_blue_1"
                android:gravity="center"
                android:text="关于xxxx项目的不可抗力生产协调" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20px">

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/activity_basexq_headerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                style="@style/text_32px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:textSize="15sp"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="项目名称" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:id="@+id/jdzf_name"
                                style="@style/text_32px_33"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone">

                            <TextView
                                style="@style/text_32px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"

                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="问题部位" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:id="@+id/activity_basexq_tv_wtbw"
                                style="@style/text_32px_33"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                style="@style/text_32px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="执法机关"/>

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:id="@+id/zf_company_name"
                                style="@style/text_32px_33"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />
                    <!--楼层-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />


                            <TextView
                                style="@style/text_32px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="执法类别" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:id="@+id/tv_status"
                                style="@style/text_32px_33"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:id="@+id/textView2"
                                style="@style/text_32px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="执法时间" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:paddingTop="5px"
                                android:paddingBottom="5px"
                                android:id="@+id/jdzf_time"
                                style="@style/text_32px_33"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:minHeight="100px"
                                android:text="" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/activity_basexq_LinearLayout_bw"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E6EBEF" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                >

                                <TextView
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="#E6EBEF" />

                                <TextView
                                    style="@style/text_32px_33"
                                    android:layout_width="150px"
                                    android:layout_height="match_parent"
                                    android:background="#F0F4F6"
                                    android:gravity="center"
                                    android:text="部位" />

                                <TextView
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="#E6EBEF" />

                                <TextView
                                    android:paddingTop="5px"
                                    android:paddingBottom="5px"
                                    android:id="@+id/activity_basexq_tv_bw"
                                    style="@style/text_32px_33"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2px"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical"
                                    android:minHeight="100px"
                                    android:text="" />

                                <TextView
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="#E6EBEF" />
                            </LinearLayout>




                        </LinearLayout>
                    </LinearLayout>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF"/>

                            <TextView
                                style="@style/text_32px_33"
                                android:layout_width="150px"
                                android:layout_height="match_parent"
                                android:background="#F0F4F6"
                                android:gravity="center"
                                android:text="责任单位" />

                            <TextView
                                android:id="@+id/jdzf_companys"
                                style="@style/text_32px_33"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="4"
                                android:gravity="center_vertical"
                                android:minHeight="100px"
                                android:text="" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="#E6EBEF" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E6EBEF" />

                </LinearLayout>

                <LinearLayout
                    android:background="@color/color_blue_1"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10px"
                        android:text="相关图片"
                        android:textColor="@color/color_666666"
                        android:textSize="33px" />

                    <TextView
                        android:id="@+id/activity_basexq_tv_ckrz"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:background="@drawable/look_sgrz_selector"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="施工日志"
                        android:textColor="@drawable/look_sgrz_text_color"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:padding="10dp"
                    android:id="@+id/jdzf_recyclerview_imgs"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    >

                </android.support.v7.widget.RecyclerView>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_blue_1"
                    android:id="@+id/activity_basexq_LinearLayout_cyjls">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="80px"
                        android:gravity="center_vertical"
                        android:paddingLeft="10px"
                        android:text="查阅纪录"
                        android:textColor="#666666"
                        android:textSize="33px" />
                    <ImageView
                        android:id="@+id/open_ico"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:src="@mipmap/arrowdown"/>
                </LinearLayout>
                <com.a21zhewang.constructionapp.customview.MyListView
                    android:id="@+id/read_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_color"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="10px"
                    android:text="处理过程记录"
                    android:background="@color/color_blue_1"
                    android:textColor="@color/color_666666"
                    android:textSize="33px" />

                <com.a21zhewang.constructionapp.customview.MyListView
                    android:visibility="gone"
                    android:id="@+id/activity_basexq_MyListView_cljls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
