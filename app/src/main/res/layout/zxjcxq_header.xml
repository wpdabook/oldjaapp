<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/zxjcxq_header_title"
android:textColor="@color/color_9e9e9e"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#F7F7F7"
        android:gravity="center"
        android:text="关于xxxx项目的不可抗力生产协调" />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E6EBEF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />

                <TextView

                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="检查项目" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />

                <TextView
                    android:id="@+id/zxjcxq_header_pjname"
                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2px"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="检查时间" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />

                <TextView
                    android:id="@+id/zxjcxq_header_time"
                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2px"
                    android:layout_weight="3"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E6EBEF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="检查人" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />

                <TextView
                    android:id="@+id/zxjcxq_header_user"

                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2px"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="所属部门" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />

                <TextView
                    android:id="@+id/zxjcxq_header_bm"

                    android:textSize="16sp"
                    android:textColor="@color/color_272727"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2px"
                    android:layout_weight="3"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#E6EBEF" />
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E6EBEF" />

    </LinearLayout>
</LinearLayout>