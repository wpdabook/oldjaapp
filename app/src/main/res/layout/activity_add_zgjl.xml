<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_zgjl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.a21zhewang.constructionapp.ui.gxys.AddZgjlActivity">
    <com.a21zhewang.constructionapp.customview.MyTitleBar
        android:id="@+id/activity_add_zgjl_MyTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titletext="添加整改内容"
        ></com.a21zhewang.constructionapp.customview.MyTitleBar>
    <ScrollView
        style="@style/scrollstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:background="#f4f5f6"
                    android:gravity="center"
                    android:text="整改项目"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="15px">
                    <TextView
                        android:id="@+id/activity_base_add_TextView_jcxm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/myspinner_shape"
                        android:minHeight="150px"
                        android:text="请选择" />

                    <!--<com.a21zhewang.constructionapp.customview.MySpinner-->
                        <!--android:id="@+id/activity_add_zgjl_MySpinner_zgxm1"-->
                        <!--android:layout_height="86px"-->
                        <!--android:layout_width="match_parent"-->
                        <!--app:text="选择" />-->

                    <!--<com.a21zhewang.constructionapp.customview.MySpinner-->
                        <!--android:id="@+id/activity_add_zgjl_MySpinner_zgxm2"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="86px"-->
                        <!--android:layout_marginTop="10px"-->
                        <!--android:layout_marginBottom="10px"-->
                        <!--app:text="选择" />-->

                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:background="#f4f5f6"
                    android:gravity="center"
                    android:text="内容描述"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/activity_add_zgjl_EditText_nrms"

                        android:padding="15px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15px"
                        android:background="@drawable/gtxt_jsll_item_shape"
                        android:gravity="left|top"
                        android:textColor="#aaaaaa"
                        android:textSize="30px" />

                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <TextView
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:background="#f4f5f6"
                    android:gravity="center"
                    android:text="上传图片"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="15px">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/activity_add_zgjl_RecyclerView_imgs"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                    </android.support.v7.widget.RecyclerView>

                    <ImageView
                        android:id="@+id/activity_add_zgjl_ImageView_addimg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/photo_ico" />


                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/tab_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_color" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px"
                android:gravity="center">

                <TextView
                    android:id="@+id/activity_add_zgjl_TextView_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bluebtn_bg"
                    android:gravity="center"
                    android:text="提交"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />
                <TextView
                    android:id="@+id/activity_add_zgjl_TextView_cancel"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bluebtn_bg"
                    android:gravity="center"
                    android:text="取消"
                    android:layout_margin="5dp"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
